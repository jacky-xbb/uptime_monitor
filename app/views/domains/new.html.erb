<h1 class="text-2xl font-semibold mb-6">Add a new domain</h1>

<%= form_with model: @domain, class: "flex space-x-4" do |form| %>
  <% invalid = @domain.errors.include?(:name) %>
  <div class="flex flex-col">
    <%= form.text_field :name, class: "text-field-primary #{'border-red-600' if invalid}", placeholder: "google.com" %>
    <div class="mt-2 text-xs text-red-600 dark:text-red-400">
      <% @domain.errors.full_messages_for(:name).each do |error_message| %>
        <%= error_message %>
      <% end %>
    </div>

  </div>
  <div>
    <%= form.submit "Save", class: "btn-primary" %>
  </div>
<% end %>
